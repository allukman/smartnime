<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.anime.DetailAnimeActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/elm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:layout_margin="8dp"
                android:src="@drawable/left_arrow_white"
                android:background="?selectableItemBackgroundBorderless"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textSize="18sp"
                android:maxLines="1"
                android:maxLength="32"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="48dp"
                app:layout_constraintRight_toLeftOf="@id/share"
                app:layout_constraintTop_toTopOf="@id/back"
                app:layout_constraintBottom_toBottomOf="@id/back"
                app:layout_constraintLeft_toRightOf="@id/back"/>

            <ImageButton
                android:id="@+id/share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:layout_margin="16dp"
                android:src="@drawable/ic_share"
                android:background="?selectableItemBackgroundBorderless"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageButton
                android:id="@+id/unfavorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:layout_margin="16dp"
                android:visibility="gone"
                android:src="@drawable/ic_unfavorite"
                android:background="?selectableItemBackgroundBorderless"
                app:layout_constraintRight_toLeftOf="@id/share"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageButton
                android:id="@+id/favorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:layout_margin="16dp"
                android:src="@drawable/ic_favorite"
                android:background="?selectableItemBackgroundBorderless"
                app:layout_constraintRight_toLeftOf="@id/share"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_image"
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    app:cardCornerRadius="8dp"
                    android:elevation="8dp"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_margin="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardview_image"/>

                <TextView
                    android:id="@+id/tv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rank"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_margin="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title"/>

                <TextView
                    android:id="@+id/rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/elm"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv_rank"
                    app:layout_constraintTop_toBottomOf="@id/tv_rank"/>

                <TextView
                    android:id="@+id/tv_popularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popularity"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rank"/>

                <TextView
                    android:id="@+id/popularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/elm"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv_popularity"
                    app:layout_constraintTop_toBottomOf="@id/tv_popularity"/>

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/popularity"/>

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/elm"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv_duration"
                    app:layout_constraintTop_toBottomOf="@id/tv_duration"/>

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_margin="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title"/>

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/elm"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintRight_toRightOf="@id/tv_score"
                    app:layout_constraintTop_toBottomOf="@id/tv_score"/>

                <TextView
                    android:id="@+id/tv_members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Members"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/score"/>

                <TextView
                    android:id="@+id/members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/elm"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintRight_toRightOf="@id/tv_members"
                    app:layout_constraintTop_toBottomOf="@id/tv_members"/>

                <TextView
                    android:id="@+id/tv_favorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorites"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/members"/>

                <TextView
                    android:id="@+id/favorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/elm"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintRight_toRightOf="@id/tv_favorites"
                    app:layout_constraintTop_toBottomOf="@id/tv_favorites"/>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/grey"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/duration"/>

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_margin="16dp"
                    app:layout_constraintRight_toLeftOf="@id/status"
                    app:layout_constraintTop_toTopOf="@id/view"
                    app:layout_constraintBottom_toBottomOf="@id/view"/>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/view"
                    app:layout_constraintBottom_toBottomOf="@id/view"/>

                <TextView
                    android:id="@+id/eps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_margin="16dp"
                    app:layout_constraintLeft_toRightOf="@id/status"
                    app:layout_constraintTop_toTopOf="@id/view"
                    app:layout_constraintBottom_toBottomOf="@id/view"/>

                <TextView
                    android:id="@+id/genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view"/>

                <TextView
                    android:id="@+id/genres"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/elm"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/genre"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container_synopsis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/genres">

                    <TextView
                        android:id="@+id/synopsis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Synopsis"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="16dp"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageButton
                        android:id="@+id/show_synopsis"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="fitXY"
                        android:layout_margin="8dp"
                        android:src="@drawable/down_arrow"
                        android:background="?selectableItemBackgroundBorderless"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageButton
                        android:id="@+id/hide_synopsis"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="fitXY"
                        android:layout_margin="8dp"
                        android:visibility="gone"
                        android:src="@drawable/up_arrow"
                        android:background="?selectableItemBackgroundBorderless"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/synopsis_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:textColor="@color/elm"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/container_synopsis"/>

                <TextView
                    android:id="@+id/trailer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trailer"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/synopsis_text"/>

                <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                    android:id="@+id/youtube_player_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="16dp"
                    app:autoPlay="false"
                    app:showFullScreenButton="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/trailer"/>

                <TextView
                    android:id="@+id/tv_english_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/youtube_player_view"/>

                <TextView
                    android:id="@+id/english_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/elm"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv_english_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_english_title"/>

                <TextView
                    android:id="@+id/tv_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Source"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/english_title"/>

                <TextView
                    android:id="@+id/source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/elm"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv_source"
                    app:layout_constraintTop_toBottomOf="@id/tv_source"/>

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/source"/>

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/elm"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv_rating"
                    app:layout_constraintTop_toBottomOf="@id/tv_rating"/>

                <TextView
                    android:id="@+id/tv_season"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Season"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/english_title"/>

                <TextView
                    android:id="@+id/season"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/elm"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintRight_toRightOf="@id/tv_season"
                    app:layout_constraintTop_toBottomOf="@id/tv_season"/>

                <TextView
                    android:id="@+id/tv_aired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aired"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/source"/>

                <TextView
                    android:id="@+id/aired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/elm"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintRight_toRightOf="@id/tv_aired"
                    app:layout_constraintTop_toBottomOf="@id/tv_aired"/>

                <TextView
                    android:id="@+id/tv_studio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Studio"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rating"/>

                <TextView
                    android:id="@+id/studio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/elm"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv_studio"
                    app:layout_constraintTop_toBottomOf="@id/tv_studio"/>

                <TextView
                    android:id="@+id/tv_licensors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Licensors"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/studio"/>

                <TextView
                    android:id="@+id/licensors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/elm"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv_licensors"
                    app:layout_constraintTop_toBottomOf="@id/tv_licensors"/>

                <TextView
                    android:id="@+id/tv_opening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opening Themes"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/licensors"/>

                <TextView
                    android:id="@+id/opening"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/elm"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_opening"/>

                <ImageButton
                    android:id="@+id/show_opening"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitXY"
                    android:layout_marginHorizontal="8dp"
                    android:src="@drawable/down_arrow"
                    android:background="?selectableItemBackgroundBorderless"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_opening"
                    app:layout_constraintTop_toTopOf="@id/tv_opening"/>

                <ImageButton
                    android:id="@+id/hide_opening"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitXY"
                    android:layout_marginHorizontal="8dp"
                    android:visibility="gone"
                    android:src="@drawable/up_arrow"
                    android:background="?selectableItemBackgroundBorderless"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_opening"
                    app:layout_constraintTop_toTopOf="@id/tv_opening"/>

                <TextView
                    android:id="@+id/tv_ending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ending Themes"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/opening"/>

                <TextView
                    android:id="@+id/ending"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/elm"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_ending"/>

                <ImageButton
                    android:id="@+id/show_ending"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitXY"
                    android:layout_marginHorizontal="8dp"
                    android:src="@drawable/down_arrow"
                    android:background="?selectableItemBackgroundBorderless"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_ending"
                    app:layout_constraintTop_toTopOf="@id/tv_ending"/>

                <ImageButton
                    android:id="@+id/hide_ending"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitXY"
                    android:layout_marginHorizontal="8dp"
                    android:visibility="gone"
                    android:src="@drawable/up_arrow"
                    android:background="?selectableItemBackgroundBorderless"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_ending"
                    app:layout_constraintTop_toTopOf="@id/tv_ending"/>

                <TextView
                    android:id="@+id/tv_characters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Characters"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ending"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_characters"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_characters"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/tv_episodes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Episodes"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_characters"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_episodes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:background="@drawable/button_background_1"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_episodes"/>

                <TextView
                    android:id="@+id/tv_recommendations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommendations"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_episodes"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recommendations"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_recommendations"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>